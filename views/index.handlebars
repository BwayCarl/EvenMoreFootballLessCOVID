            <h2 id="teamName" class="mb-5"></h2>
            <ul id="teamGame" class="teamGame">
        </div>

        <!-- covid risk data renders here -->
        <div id="risk-info" class="section-bg d-none">
            <h2 id="stadium" class="text-center"></h2>
            <h5 id="city" class="text-center mb-4"></h5>
            <div class="row">
                <p class="riskbox font-weight-bold col-md-6">Number of Cases: <span class="riskdata" id="cases"></span>
